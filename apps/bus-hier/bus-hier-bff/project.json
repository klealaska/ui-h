{
  "name": "bus-hier-bff",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bus-hier/bus-hier-bff/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/bus-hier/bus-hier-bff",
        "main": "apps/bus-hier/bus-hier-bff/src/main.ts",
        "tsConfig": "apps/bus-hier/bus-hier-bff/tsconfig.app.json",
        "assets": ["apps/bus-hier/bus-hier-bff/src/assets"],
        "webpackConfig": "apps/bus-hier/bus-hier-bff/webpack.config.js",
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        },
        "mock": {
          "fileReplacements": [
            {
              "replace": "apps/bus-hier/bus-hier-bff/src/environments/environment.ts",
              "with": "apps/bus-hier/bus-hier-bff/src/environments/environment.mock.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "bus-hier-bff:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "bus-hier-bff:build:production"
        },
        "mock": {
          "buildTarget": "bus-hier-bff:build:mock"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bus-hier/bus-hier-bff/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/bus-hier/bus-hier-bff/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["type:bff", "scope:bus-hier"]
}
